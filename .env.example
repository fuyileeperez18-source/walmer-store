# ===========================================
# WALMER STORE - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
# Note: Secret key should only be used on the server side
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ===========================================
# WHATSAPP BUSINESS API
# ===========================================
VITE_WHATSAPP_NUMBER=+1234567890
VITE_WHATSAPP_API_URL=https://graph.facebook.com/v17.0/your-phone-number-id
VITE_WHATSAPP_API_TOKEN=your-whatsapp-api-token

# ===========================================
# ANALYTICS (Optional)
# ===========================================
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=your-hotjar-id

# ===========================================
# SITE CONFIGURATION
# ===========================================
VITE_SITE_URL=https://walmerstore.com
VITE_SITE_NAME=WALMER Store

# ===========================================
# FEATURE FLAGS
# ===========================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_WHATSAPP=true
